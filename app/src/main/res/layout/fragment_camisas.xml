<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamisasFragment"
    android:id="@+id/itemFramentCamisas"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_margin="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_background"
                android:padding="8dp"> <!-- Puedes definir un fondo personalizado para las filas -->

                <TextView
                    android:id="@+id/numeroCamisas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="16sp" /> <!-- AlineaciÃ³n del texto al centro -->

                <TextView
                    android:id="@+id/MaterialCamisas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Material"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Talla"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Talla"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/colorCamisas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Color"
                    android:textSize="16sp" />

            </TableRow>

        </TableLayout>


    </LinearLayout>



</FrameLayout>